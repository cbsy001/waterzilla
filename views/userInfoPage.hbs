<div class="right_col" role="main" style="min-height: 3288.8px;">
  <div class="col-xs-12 col-sm-9">
    <form class="form-horizontal">
      <div class="panel panel-default">
        <div class="image-container panel-body text-center">
          <img src="{{userImage}}" class="profile-avatar" alt="User avatar" />
          <button type="button" class="hover-button" data-toggle="modal" data-target="#changeImageform">Button</button>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input
                type="email"
                value="{{userEmail}}"
                class="form-control"
                readonly
              />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <input
                type="text"
                value="{{userFullName}}"
                class="form-control"
                readonly
              />
            </div>
          </div>
          <br>
          <div class="form-group">
            <label class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <button type="button" data-toggle="modal" data-target="#changePasswordform" class="btn btn-primary">Edit</button>
            </div>
            
        </div>
      </div>
    </form>
  </div>
</div>

<div class="modal fade" id="changePasswordform" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lable">Changing password form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
         <div class="form-group">
            <input hidden value="{{userId}}" type="password" class="form-control" required="required" autocomplete="off" id="uidChanging">
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Old password</label>
            <input type="password" class="form-control" required="required" autocomplete="off" id="oldPassword">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">New password</label>
            <input type="password" class="form-control" required="required" autocomplete="off" id="newPassword">
          </div>
           <div class="form-group">
            <label for="exampleFormControlInput1">Confirm new password</label>
            <input type="password" class="form-control" required="required" autocomplete="off" id="confirmPassword">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="submitedChangePassword" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="changeImageform" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lable">Changing avatar form</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img id="uploadedImage" src="{{userImage}}" alt="Uploaded Image" style="max-width: 100%">
        <form>
         <div class="form-group">
            <input hidden value="{{userId}}" type="password" class="form-control" required="required" autocomplete="off" id="uidChangingImage">
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Add image</label>
            <input type="file" class="form-control" required="required" autocomplete="off" id="imageChanging" accept="image/png, image/gif, image/jpeg" style="max-width: 100">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="submitedChangeImage" type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>