<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>CellphoneZ</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="../../../vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="../../../vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="../../../vendors/animate.css/animate.min.css" rel="stylesheet">
    <script src="../../../vendors/jquery/dist/jquery.min.js"></script>

    <!-- Custom Theme Style -->
    <link href="../../../stylesheets/custom.min.css" rel="stylesheet">

    <script src="../../../javascripts/sample.js"></script>
  </head>

  <body class="login">
    <div>
      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="change_password_content">
              <h1>Change password</h1>
              <div>
                <input type="text" name="{{userId}}" id="userToChangePwd" class="form-control" placeholder="Username" required="" value="{{user}}" readonly/>
              </div>
              <div>
                <input type="password" name="password_change_input" id="password1" class="form-control" placeholder="Password" required="" value="" />
              </div>
              <div>
                <input type="password" name="password_change_input" id="password2" class="form-control" placeholder="Password" required="" value="" />
              </div>
              <div>
                <button id="change_password_btn" class="btn btn-default submit" type="button">Log in</button>
              </div>
          </section>
        </div>
      </div>
    </div>
    <div id="loginFailAlertForLogin" class="alert alert-danger" style="display:none; position: fixed; top: 50%; right: 0; width: 40%;">
      <strong>Fail!</strong> Password not match.
    </div>
  </body>
</html>
