  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewDataModalLabel">View Detail</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="orderId">
            <p>Order ID: <strong>000000</strong></p>
        </div>
        <div id="salerName">
            <p>Saller: <strong>000000</strong></p>
        </div>
        <div id="payment">
            <p>Payment type: <strong>000000</strong></p>
        </div>
        <div id="date">
            <p>Date: <strong>000000</strong></p>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Barcode</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody id="data-table-body">
            <!-- Data will be inserted here -->
            <tr>
              <th>Name</th>
              <th>Barcode</th>
              <th>Quantity</th>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>